<h1>Welcome, <%= current_user.first_name %>!</h1>

<h3>Your Brilliant Ideas</h3>
<%= button_to "Create New Idea", new_idea_path, method: :get %>

 <% current_user.ideas.each do |idea| %>
   <p><%= idea.title %></p>
  <p><%= idea.description %></p>
  <p><%= link_to "Edit", edit_idea_path(idea) %></p>
<% end %>